<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Material Design for Bootstrap fonts and icons -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700|Material+Icons">

    <link rel="stylesheet" href="css/bootstrap-material-design.css"/>
    <link rel="stylesheet" href="css/main.css"/>

    <title>PushG</title>
</head>
<body>
<nav class="navbar sticky-top navbar-expand-lg navbar-dark bg-dark">
    <a class="navbar-brand" href="#">
        <img src="../assets/icons/pushup.svg" width="50" height="30" class="d-inline-block align-top" alt="" id="logo">
        PushG
    </a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item active">
                <a class="nav-link" href="#" onclick="loadDoc('pushG');">pushG <span
                            class="sr-only">(current)</span></a>
            </li>
            <li class="nav-item active">
                <a class="nav-link" href="#" onclick="loadDoc('aram');">All Random All Drink <span class="sr-only">(current)</span></a>
            </li>
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown"
                   aria-haspopup="true" aria-expanded="false">
                    Dropdown
                </a>
                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                    <a class="dropdown-item" href="#">Action</a>
                    <a class="dropdown-item" href="#">Another action</a>
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item" href="#">Something else here</a>
                </div>
            </li>
            <li class="nav-item">
                <a class="nav-link disabled" href="#" tabindex="-1" aria-disabled="true">Disabled</a>
            </li>
        </ul>
        <form class="form-inline my-2 my-lg-0">
            <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
            <button class="btn btn-outline-warning my-2 my-sm-0" type="submit">Search</button>
        </form>
    </div>
</nav>
<div id="main_content" class="container">
    <div class="row">
        <div class="col-3">
        </div>
        <div class="col-6">
            <form action="/aram" method="post">
                <div class="form-group">

                    <label class="input-group-text" for="region">Server: </label>
                    <select class="custom-select" id="region" name="region">
                        <option selected>Choose...</option>
                        <option value="EUW1" selected>EU West</option>
                        <option value="EUN1">EU North</option>
                        <option value="NA1">North America</option>
                    </select>

                    <label class="input-group-text" for="summoner_name">Playername: </label>
                    <input type="text" id="summoner_name" class="form-control" name="playername"><br>

                    <label class="input-group-text" for="difficultySelect">Difficulty: </label>
                    <div class="btn-group btn-group-lg" id="difficultySelect" role="group">
                        <button type="button" class="btn btn-secondary">Easy</button>
                        <button type="button" class="btn btn-secondary">Middle</button>
                        <button type="button" class="btn btn-secondary">Hard</button>
                        <button type="button" class="btn btn-secondary">Party</button>
                    </div>

                    <label class="input-group-text" for="allPlayers">Calculate for only yourself or all Players in your
                        Team: </label>
                    <div class="btn-group" id="allPlayers" role="group">
                        <button type="button" class="btn btn-secondary">Only Me</button>
                        <button type="button" class="btn btn-secondary">Whole Team</button>
                    </div>
                    <br>
                    <button type="submit" class="btn btn-outline-dark" onclick="getAccID()">Submit</button>
                </div>
            </form>
        </div>
        <div class="col-3">
        </div>
    </div>
    <% if(stat !== null){ %>
        <ul class="list-group" id="player_stats">
            <%- stat %>
        </ul>
    <% }
    %>

</div>

<script src="js/jquery-3.4.1.slim.min.js"></script>
<script src="js/popper.min.js"></script>
<script src="js/bootstrap-material-design.js"></script>
<script>$(document).ready(function () {
        $('body').bootstrapMaterialDesign();
    });</script>
<script src="../js/main.js" crossorigin="anonymous"></script>
<script type="text/javascript" src="../js/leagueAPIAccess.js"></script>
<script type="text/javascript" src="js/request.js"></script>
</body>
</html>